import "../styles/global.css"
---

<form method="post">
  <input class="email"type="text" placeholder="Email Adress"/> <br>
  <input class="password" type="password" placeholder="Password"/>
  <div class="underFormRemember">
    <input type="checkbox" name="remember" id="remember" /> Remember me
  </div>
  <div id="underFormForgot">
    <a class="links" href="#"><p id="forgotLink" >Forgot password!</p></a>
  </div>
  <input type="submit" value="Sign In" />
</form>

<style>
  #forgotLink{
    color: var(--grey-200);
  }
</style>
