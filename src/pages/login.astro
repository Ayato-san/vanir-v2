---
import LoginLayout from "../layouts/LoginLayout.astro";
import LoginForm from "../components/LoginForm.astro";
import Logo from "../../public/logo_vanir.svg";
---

<LoginLayout>
  <div id="logo">
    <img style="background-color: rgb(27, 26, 26); border-radius: 150px;" src={Logo.src} alt="The Logo" width="65px" height="65px" />
  </div>
  <div id="messageSign">
    <p>Sign into your account</p>
  </div>
  <LoginForm />
</LoginLayout>

<style>
  * {
    font-family: "Inter";
    --font-size-4xl: 2.25rem;
    --font-size-3xl: 1.75rem;
    --font-size-2xl: 1.5rem;
    --font-size-xl: 1.25rem;
    --font-size-lg: 1.125rem;
    --font-size-md: 1rem;
    --font-size-sm: 0.875rem;
    --font-size-xs: 0.75rem;
    --font-weight-normal: 400;
    --font-weight-600: 600;
    --font-weight-bold: 700;
    --line-height-sm: 1.3;
    --line-height-ms: 1.5;
    --blue-200: #73bcf7;
    --blue-400: #06c;
    --blue-600: #002952;
  }
  #messageSign {
    text-align: center;
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-600);
    width: 100%;
  }
  #logo {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
</style>
